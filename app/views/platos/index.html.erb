<p id="notice"><%= notice %></p>
<h1>Platos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Tipo</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platos.each do |plato| %>
      <tr>
        <td><%= plato.nombre %></td>
        <td><%= plato.precio %></td>
        <td><%= plato.tipo %></td>
        <td><%= plato.descripcion %></td>
        <td><%= plato.cantidad %></td>
        <td>
        <div class="btn btn-primary btn white-text">
          <%= link_to 'Mostrar', plato, :class => "button" %></div></td>
        <td>
        <div class="btn btn-warning btn white-text">
          <%= link_to 'Editar', edit_plato_path(plato), :class => "button"%></td>
        <td>
        <div class="btn btn-danger btn white-text">
          <%= link_to 'Destruir', plato, method: :delete, data: { confirm: 'Estas seguro?' },:class => "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="btn btn-success btn white-text">
<%= link_to 'Nuevo Plato', new_plato_path,:class => "button" %>
</div>
