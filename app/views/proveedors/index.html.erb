<p id="notice"><%= notice %></p>

<h1>Proveedores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rut</th>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.rut %></td>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.mail %></td>
        <div class="btn btn-primary btn white-text">
          <%= link_to 'Mostrar', proveedor, :class => "button" %></div></td>
        <td>
        <div class="btn btn-warning btn white-text">
          <%= link_to 'Editar', edit_proveedor_path(proveedor), :class => "button"%></td>
        <td>
        <div class="btn btn-danger btn white-text">
          <%= link_to 'Destruir', proveedor, method: :delete, data: { confirm: 'Estas seguro?' },:class => "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="btn btn-success btn white-text">
<%= link_to 'Nuevo Proveedor', new_proveedor_path,:class => "button" %>
</div>
