<p id="notice"><%= notice %></p>

<h1>Venta</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Tipo</th>
      <th>Subtotal</th>
      <th>Iva</th>
      <th>Propina</th>
      <th>Total</th>
      <th>Fecha</th>
      <th>Pedido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venta.each do |ventum| %>
      <tr>
        <td><%= ventum.numero %></td>
        <td><%= ventum.tipo %></td>
        <td><%= ventum.subtotal %></td>
        <td><%= ventum.iva %></td>
        <td><%= ventum.propina %></td>
        <td><%= ventum.total %></td>
        <td><%= ventum.fecha %></td>
        <td><%= ventum.pedido %></td>
        <<div class="btn btn-primary btn white-text">
          <%= link_to 'Mostrar', ventum, :class => "button" %></div></td>
        <td>
        <div class="btn btn-warning btn white-text">
          <%= link_to 'Editar', edit_ventum_path(ventum), :class => "button"%></td>
        <td>
        <div class="btn btn-danger btn white-text">
          <%= link_to 'Destruir', ventum, method: :delete, data: { confirm: 'Estas seguro?' },:class => "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="btn btn-success btn white-text">
<%= link_to 'Nueva Venta', new_ventum_path,:class => "button" %>
</div>
