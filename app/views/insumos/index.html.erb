<p id="notice"><%= notice %></p>

<h1>Ingredientes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Unidadmedida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insumos.each do |insumo| %>
      <tr>
        <td><%= insumo.nombre %></td>
        <td><%= insumo.cantidad %></td>
        <td><%= insumo.unidadmedida %></td>
        <td>
        <div class="btn btn-primary btn white-text">
          <%= link_to 'Mostrar', insumo, :class => "button" %></div></td>
        <td>
        <div class="btn btn-warning btn white-text">
          <%= link_to 'Editar', edit_insumo_path(insumo), :class => "button"%></td>
        <td>
        <div class="btn btn-danger btn white-text">
          <%= link_to 'Destruir', insumo, method: :delete, data: { confirm: 'Estas seguro?' },:class => "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn btn-success btn white-text">
<%= link_to 'Nuevo Ingrediente', new_insumo_path,:class => "button" %>
</div>
