<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipopedido</th>
      <th>Fecha</th>
      <th>Empleado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.tipopedido %></td>
        <td><%= pedido.fecha %></td>
        <td><%= pedido.empleado.nombre %></td>
        <td>
        <div class="btn btn-primary btn white-text">
          <%= link_to 'Mostrar', pedido, :class => "button" %></div></td>
        <td>
        <div class="btn btn-warning btn white-text">
          <%= link_to 'Editar', edit_pedido_path(pedido), :class => "button"%></td>
        <td>
        <div class="btn btn-danger btn white-text">
          <%= link_to 'Destruir', pedido, method: :delete, data: { confirm: 'Estas seguro?' },:class => "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="btn btn-success btn white-text">
<%= link_to 'Nuevo Pedido', new_pedido_path,:class => "button" %>
</div>
