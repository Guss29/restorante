<p id="notice"><%= notice %></p>

<h1>Mesas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cantidadpersonas</th>
      <th>Ubicacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mesas.each do |mesa| %>
      <tr>
        <td><%= mesa.cantidadpersonas %></td>
        <td><%= mesa.ubicacion %></td>
        <div class="btn btn-primary btn white-text">
          <%= link_to 'Mostrar', mesa, :class => "button" %></div></td>
        <td>
        <div class="btn btn-warning btn white-text">
          <%= link_to 'Editar', edit_mesa_path(mesa), :class => "button"%></td>
        <td>
        <div class="btn btn-danger btn white-text">
          <%= link_to 'Destruir', mesa, method: :delete, data: { confirm: 'Estas seguro?' },:class => "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="btn btn-success btn white-text">
<%= link_to 'Nueva Mesa', new_mesa_path,:class => "button" %>
</div>
